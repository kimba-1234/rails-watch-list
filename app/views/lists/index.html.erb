<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1485846234645-a62644f84728?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8bW92aWV8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60);">
  <div class="container">
    <div class="header">
      <h1>Save any kind of movie</strong>!</h1>
      <%= link_to "Create a new list", new_list_path , class: "btn btn-flat" %>
    </div>
  </div>
</div>

<div class="container">
  <h3>Saved list</h3>
  <div class="container-body">
      <% @lists.each do |list| %>
        <div class="card-product">
          <div class="card-product-infos">
              <strong><%= link_to list.name, list_path(list) %></strong>
              <p class="delete-item">
                <%= link_to "Delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
              </p>
          </div>
        </div>
      <% end %>
  </div>
</div>
